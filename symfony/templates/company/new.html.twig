{% extends 'base.html.twig' %}

{% block title %}Nueva Empresa{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('pages/new_enterprise') }}
{% endblock %}

{% block body %}
    <div class="m-0 vh-100 row justify-content-center align-items-center">
        <div class="card p-5 shadow-lg border-0" style="width: 28rem;">
            <h1 class="h3 fw-bold">Nueva Empresa</h1>
            <p class="text-muted">Por favor ingrese los datos de la nueva empresa</p>
            {{ form_start(form, {'method': 'post'}) }}
                <div class="mt-3">
                    {{ form_row(form.name, {'attr': {'class': 'form-control rounded border-color' }}) }}
                    {{ form_row(form.email, {'attr': {'class': 'form-control rounded border-color mt-4'}}) }}
                    {{ form_row(form.owner, {'attr': {'class': 'form-select rounded border-color mt-4'}}) }}

                    <div class="btn-group mt-4">
                        {{ form_row(form.save, {'attr': {'class': 'btn btn-lg btn-primary rounded px-5'}}) }}
                        <a href="{{ url('app_company') }}" class="btn btn-lg btn-outline-danger rounded ms-4 px-5">Volver</a>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}