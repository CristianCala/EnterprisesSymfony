{% extends 'base.html.twig' %}

{% block title %}Empresas registradas{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="fw-bold">Empresas registradas</h1>
        <p>Aqu√≠ puedes ver todas las empresas registradas en el sistema.</p>
        <div class="mt-3">
            {% if companies %}
                <table class="table table-striped ">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for company in companies %}
                            <tr>
                                <td>{{ company.id }}</td>
                                <td>{{ company.name }}</td>
                                <td>{{ company.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="h4 fw-bold text-danger text-center">No hay empresas registradas</p>
            {% endif %}
        </div>
        <div class="mt-3 text-center">
            <a href="{{ url('company_new') }}" class="btn btn-primary btn-lg rounded">
                Nueva empresa
            </a>
        </div>
    </div>
{% endblock %}
