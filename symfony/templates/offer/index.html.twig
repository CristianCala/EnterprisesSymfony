{% extends 'base.html.twig' %}

{% block title %}Ofertas disponibles
{% endblock %}

{% block body %}
    <div id="flash-messages">
        {% for messages in app.flashes %}
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        {% endfor %}
    </div>
    <div>
        <h1>Ofertas disponibles</h1>
        <a href="{{ url('offer_apply', {id: offers.id}) }}">Nueva oferta</a>
        {% if offers|length > 0 %}
            <ul>
                {% for offer in offers %}
                    <li>{{ offer.title }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="fw-bold text-danger">No hay ofertas a√∫n</p>
        {% endif %}
    </div>
{% endblock %}
